{
    "name": "jlndk/laravel-fake-broadcaster",
    "description": "A broadcast provider for testing event broadcasting",
    "keywords": [
        "laravel",
        "broadcasting",
        "testing",
        "events"
    ],
    "homepage": "https://github.com/jlndk/laravel-fake-broadcaster",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Lindenskov Nielsen",
            "email": "hi@lindenskov.dev",
            "homepage": "https://lindenskov.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "symfony/var-dumper": "^5.0",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Jlndk\\FakeBroadcaster\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jlndk\\FakeBroadcaster\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jlndk\\FakeBroadcaster\\FakeBroadcastServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
